@section Scripts {
    <script type="text/javascript">
        $("#btnSubscribe").click(function () {
            if (!/^\s*$/.test($("#txtSubscriberEmail").val())) {
                $.ajax({
                    url: '@Url.Action("Subscribe", "Subscriber")',
                    data: { Email: $("#txtSubscriberEmail").val() },
                    dataType: 'json',
                    method: 'POST',
                    success: function (result) {
                        $("#submittedAlertSubscribe").slideDown("slow");
                        $("#txtSubscriberEmail").val();
                    },
                    error: function (xhr, error, errorThrown) {
                    }

                });
            }
        });
    </script>
}