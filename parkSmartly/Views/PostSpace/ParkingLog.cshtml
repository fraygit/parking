@model parkSmartly.Data.Model.Space

@{
    ViewBag.Title = "Parking log";
    Layout = "~/Views/Shared/_LayoutMaterialAdmin.cshtml";
    ViewBag.PageName = "myspace";
    ViewBag.MenuPropertyOwnerClass = "active";

}

<div class="card col-md-12">
    <div class="row">
        <div class="col-md-12">
            <div class="card-head">
                <header>Parking log</header>
            </div>
            <!--end .card-head -->
            <div class="card-body">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6">
                                <a href="@Url.Action("List","PostSpace")" class="btn btn-primary" type="button" id="cf-submit">Back</a>
                            </div>
                        </div>
                        <div id="contact" class="form-container">
                            <fieldset>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Checkin</th>
                                            <th>Checkout</th>
                                            <th>Total Amount Charged</th>
                                        </tr>

                                    </thead>
                                    @if (Model.Parking != null) { 
                                        foreach (var parkingLog in Model.Parking)
                                        {
                                            <tr>
                                                <td>@parkingLog.CheckIn</td>
                                                <td>@parkingLog.CheckOut</td>
                                                <td>@parkingLog.TotalCostCharged.ToString("c2")</td>
                                            </tr>
                                        }
                                    }
                                </table>
                            </fieldset>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>