@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        function ShowTC() {
            $("#termsandconditionmodal").modal('show');
        }

        $("#tc").change(function () {
            if ($("#tc").prop('checked') == true) {
                $("#cf-submit").removeProp("disabled");
            }
            else {
                $("#cf-submit").prop('disabled', true);
            }
        });

        $("#btnPostFeedback").click(function () {
            $.ajax({
                url: '@Url.Action("Post", "Feedback")',
                data: { Message: $("#txtMessage").val(), Email: $("#txtFeedbackEmail").val() },
                dataType: 'json',
                method: 'POST',
                success: function (result) {
                    $("#submittedAlert").slideDown("slow");
                },
                error: function (xhr, error, errorThrown) {
                }

            });
        });
    </script>
