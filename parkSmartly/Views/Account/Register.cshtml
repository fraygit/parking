                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <fieldset>
                            <div id="message"></div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username (Required)" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email  (Required)" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", placeholder = "Email" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password  (Required)" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm password  (Required)" })
                            </div>
                            @*<div class="form-group">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Surname" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Address" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.City, city, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.Country, country, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.AllowAddressVerfication)
                                @Html.LabelFor(m => m.AllowAddressVerfication)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.HomePhone, new { @class = "form-control", @placeholder = "Home phone number" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MobilePhone, new { @class = "form-control", @placeholder = "Mobile phone number" })
                            </div>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.AllowPhoneVerfication)
                                @Html.LabelFor(m => m.AllowPhoneVerfication)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.DriversLicense, new { @class = "form-control", @placeholder = "Driver's License Number" })
                            </div>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.AllowDriverLicenseVerfication)
                                @Html.LabelFor(m => m.AllowDriverLicenseVerfication)
