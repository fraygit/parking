@model parkSmartly.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutMaterialDesignLogin.cshtml";

    var city = new List<SelectListItem>();
    city.Add(new SelectListItem { Text = "Auckland", Value = "Auckland" });

    var country = new List<SelectListItem>();
    country.Add(new SelectListItem { Text = "New Zealand", Value = "New Zealand" });

}


